@model SliderEditVM
@{
    ViewData["Title"] = "Edit";
}

<div class="container my-5">
    <div class="Slider-image">
        <img src="~/img/@Model.Image" style="width:500px;height:300px;" />
    </div>
    <form method="post" asp-action="Edit" enctype="multipart/form-data">
        <input asp-for=NewImage class="form-control mt-3" style="width:500px;" maxlength="" />
        <span class="text-danger d-block" asp-validation-for="NewImage"></span>
        <button type="submit" class="btn btn-outline-success mt-3">Submit</button>
        <a asp-action="Index" class="btn btn-outline-info mt-3">Back</a>
    </form>
</div>

